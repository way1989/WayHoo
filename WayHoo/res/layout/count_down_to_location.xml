<?xml version="1.0" encoding="utf-8"?>
<com.way.ui.view.CountDownView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/count_down_to_locate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0000000"
    android:visibility="invisible" >

    <TextView
        android:id="@+id/remaining_seconds"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/count_down_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="80dp"
        android:paddingTop="120dp"
        android:text="正在努力搜寻您的位置..."
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/cancel_locate_city_btn"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_gravity="bottom"
        android:layout_marginBottom="40.0dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:background="@drawable/cityselector_locate_btn_bg"
        android:text="取  消"
        android:textColor="@android:color/white"
        android:textSize="20.0sp" />

</com.way.ui.view.CountDownView>